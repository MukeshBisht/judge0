FROM hermanzdosilovic/judge0-api

RUN apt-get update && apt-get install -y \
  nodejs-legacy \
  npm \
  sudo \
  vim

RUN npm install -g aglio

ARG DEV_USER
ARG DEV_USER_ID

RUN useradd -u $DEV_USER_ID -m -r $DEV_USER && \
  echo "$DEV_USER ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers

ENV TERM xterm
USER $DEV_USER

CMD sleep infinity
